<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="doc.file.mapper.DirectoryMapper">
	<resultMap id="EntityResultMap" type="doc.file.entity.Directory">
		<id column="ID" jdbcType="VARCHAR" property="id" />
		<result column="MINGCHENG" jdbcType="VARCHAR" property="mingCheng" />
	</resultMap>
	<resultMap id="ViewResult" type="doc.file.view.DirectoryV"
		extends="EntityResultMap">
	</resultMap>
	<select id="selectCount" parameterType="java.util.Map"
		resultType="java.lang.Integer">
		select count(*) as shu
		from doc_directory
		where 1=1
		<if test="id != null">
			AND ID = #{id,jdbcType=VARCHAR}
		</if>
		<if test="mingCheng != null">
			AND MingCheng like #{mingCheng,jdbcType=VARCHAR}
		</if>
	</select>
	<!-- 分页查询 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="ViewResult">
		select *
		FROM doc_directory
		WHERE 1=1
		<if test="id != null">
			AND id = #{id,jdbcType=VARCHAR}
		</if>
		<if test="mingCheng != null">
			AND mingcheng like #{mingCheng,jdbcType=VARCHAR}
		</if>
		limit #{begin}, #{PageSize}
	</select>
	<!-- 查询单个 -->
	<select id="get" parameterType="java.lang.String" resultMap="EntityResultMap">
		select
		*
		from doc_directory
		where id = #{id,jdbcType=VARCHAR}
	</select>
	<select id="show" parameterType="java.lang.String" resultMap="ViewResult">
		select
		*
		from doc_directory
		where id = #{id,jdbcType=VARCHAR}
	</select>
	<delete id="delete" parameterType="java.lang.String">
		delete from doc_directory
		where
		id=#{id,jdbcType=VARCHAR}
	</delete>
	<insert id="insert" parameterType="doc.file.entity.Directory">
		insert into doc_directory
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				ID,
			</if>
			<if test="mingCheng != null">
				MingCheng,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=VARCHAR},
			</if>
			<if test="mingCheng != null">
				#{mingCheng,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<update id="update" parameterType="doc.file.entity.Directory">
		update doc_directory
		<set>
			<if test="mingCheng != null">
				MingCHeng = #{mingCheng,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=VARCHAR}
	</update>
</mapper>